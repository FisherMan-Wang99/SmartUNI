/* 页面基础样式 */
.page {
  padding-top: 0; /* 去掉默认留白 */
  background-color: #f0f7ff;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 顶部渐变栏 */
.header {
  background: linear-gradient(135deg, #1976D2 0%, #2196F3 100%);
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  color: white;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(33, 150, 243, 0.2);
  position: relative;
  overflow: hidden;
}

/* 顶部装饰元素 */
.header::after {
  content: '';
  position: absolute;
  bottom: -50rpx;
  right: -50rpx;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
}

.header::before {
  content: '';
  position: absolute;
  top: -50rpx;
  left: -50rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  letter-spacing: 2rpx;
}

/* 容器样式 */
.container {
  padding: 30rpx;
  padding-bottom: 100rpx;
}

/* 进度指示器 */
.progress-indicator {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05);
  padding: 36rpx;
  margin-top: 30rpx;
  margin-bottom: 36rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #e0e0e0;
  border-radius: 6rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1976D2 0%, #2196F3 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-steps {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
}

.step {
  text-align: center;
  flex: 1;
}

.step.active {
  color: #1976D2;
  font-weight: bold;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05);
  padding: 36rpx;
  margin-bottom: 36rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 6rpx;
  background: linear-gradient(90deg, #4a148c, #7c4dff);
  border-radius: 3rpx 3rpx 0 0;
}

.card-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #1976D2;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.card-title::before {
  content: '';
  display: inline-block;
  width: 10rpx;
  height: 30rpx;
  background: linear-gradient(to bottom, #1976D2, #2196F3);
  border-radius: 5rpx;
}

/* 活动部分 */
.activity-section {
  margin-bottom: 40rpx;
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.activity-section:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.activity-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 16rpx;
  padding-left: 10rpx;
}

.question-number {
  color: #1976D2;
  font-weight: bold;
}

/* 选项容器 */
.options-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.option-item {
  background: #f5f5f5;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  flex: 0 0 calc(50% - 10rpx);
}

/* 选项选中状态 */
.option-item.checked {
  background: linear-gradient(135deg, #1976D2, #2196F3);
  color: white;
  border-color: #1976D2;
}

.check-icon {
  font-size: 32rpx;
  font-weight: bold;
  color: #1976D2;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.option-item.checked .check-icon {
  opacity: 1;
}

/* 时长容器 */
.durations-container {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-top: 20rpx;
  border-left: 6rpx solid #2196F3;
}

.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
  flex-wrap: wrap;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  padding-right: 20rpx;
  box-sizing: border-box;
  line-height: 1.4;
  word-wrap: break-word;
  word-break: break-all;
  min-width: 0;
}

/* 输入框样式 */
.input {
  width: 100%;
  min-height: 92rpx; /* 修改为最小高度，允许内容扩展 */
  padding: 20rpx 30rpx; /* 增加上下内边距 */
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  background: #fafafa;
  transition: all 0.3s ease;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 1.5; /* 调整行高，适应多行文本 */
  word-wrap: break-word; /* 允许文本换行 */
  word-break: break-all; /* 确保长单词也能换行 */
}

.input:focus {
  border-color: #7c4dff;
  background: #fff;
  box-shadow: 0 0 0 6rpx rgba(124, 77, 255, 0.1);
}

.input.short {
  width: 150rpx;
  text-align: center;
}

.input.full {
  flex: 1;
  width: 100%;
}

/* 底部按钮 */
.bottom-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.back-btn, .next-btn {
  width: 48%;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.back-btn {
  background: white;
  color: #1976D2;
  border: 2rpx solid #1976D2;
}

.back-btn:active {
  background: #f5f5f5;
  transform: scale(0.98);
}

.next-btn {
  background: linear-gradient(135deg, #4a148c 0%, #7c4dff 100%);
  color: white;
  border: none;
  box-shadow: 0 10rpx 30rpx rgba(124, 77, 255, 0.3);
  position: relative;
  overflow: hidden;
}

.next-btn::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255,255,255,0.2), transparent);
  transform: rotate(30deg);
  opacity: 0;
  transition: opacity 0.5s;
}

.next-btn:active {
  opacity: 0.85;
  transform: translateY(4rpx);
  box-shadow: 0 6rpx 20rpx rgba(124, 77, 255, 0.2);
}

.next-btn:active::before {
  opacity: 1;
}

/* 响应式调整 */
@media (max-width: 320px) {
  .container {
    padding: 0 30rpx;
  }
  
  .card {
    padding: 30rpx;
  }
  
  .header {
    padding: 100rpx 30rpx 50rpx;
  }
  
  .option-item {
    flex: 0 0 100%;
  }
}