.cover-page {
  width: 100%;
  height: 100vh;
  background: linear-gradient(135deg, #1976D2 0%, #2196F3 50%, #03A9F4 100%);
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

/* 解决内容偏右问题 - 添加一个额外的容器来确保绝对居中 */
.content-wrapper {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 背景装饰圆圈 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.floating-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  box-shadow: 0 0 60rpx rgba(255, 255, 255, 0.15);
  animation: float 8s ease-in-out infinite;
}

.circle-1 {
  width: 240rpx;
  height: 240rpx;
  top: 10%;
  left: 10%;
  animation-delay: 0s;
}

.circle-2 {
  width: 180rpx;
  height: 180rpx;
  top: 20%;
  right: 15%;
  animation-delay: 2s;
}

.circle-3 {
  width: 120rpx;
  height: 120rpx;
  bottom: 30%;
  left: 20%;
  animation-delay: 4s;
}

.circle-4 {
  width: 150rpx;
  height: 150rpx;
  bottom: 20%;
  right: 25%;
  animation-delay: 1s;
}

/* 新增光晕效果 */
.glow-circle {
  position: absolute;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0) 70%);
}

.glow-1 {
  width: 600rpx;
  height: 600rpx;
  top: -200rpx;
  left: -200rpx;
}

.glow-2 {
  width: 400rpx;
  height: 400rpx;
  bottom: -150rpx;
  right: -150rpx;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg) scale(1); }
  50% { transform: translateY(-30px) rotate(180deg) scale(1.1); }
}

/* 主要内容 */
.main-content {
  text-align: center;
  z-index: 10;
  width: 100%;
  max-width: 700rpx;
  margin: 0 auto;
  padding: 0;
  /* 继续增加向左移动的幅度，确保居中 */
  transform: translateX(-6%);
}

/* Logo 区域 */
.logo-section {
  position: relative;
  margin-bottom: 80rpx;
  animation: logoSlideIn 1s ease-out;
}

.logo-icon {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  position: relative;
}

.logo-inner {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #2196F3, #03A9F4);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 60rpx rgba(33, 150, 243, 0.4);
  animation: pulse 2s ease-in-out infinite;
  border: 2rpx solid rgba(255, 255, 255, 0.8); /* 增强圆圈边缘清晰度 */
}

.logo-text {
  font-size: 80rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
}

.logo-glow {
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  right: -20rpx;
  bottom: -20rpx;
  background: linear-gradient(135deg, #2196F3, #03A9F4);
  border-radius: 50%;
  opacity: 0.5; /* 略微增加透明度，增强发光效果 */
  filter: blur(30rpx);
  animation: glow 2s ease-in-out infinite alternate;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

@keyframes glow {
  0% { opacity: 0.3; transform: scale(1); }
  100% { opacity: 0.6; transform: scale(1.1); }
}

/* 标题区域 */
.title-section {
  margin-bottom: 80rpx;
}

.main-title {
  font-size: 64rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: 0 4rpx 12rpx rgba(255, 64, 129, 0.3);
  letter-spacing: 4rpx;
  animation: fadeIn 1s ease-out;
}

.subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 30rpx;
  font-weight: 300;
  animation: fadeIn 1s ease-out 0.2s both;
}

.description {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
  font-weight: 300;
  animation: fadeIn 1s ease-out 0.4s both;
}

/* 特色标签 */
.features-section {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 100rpx;
  flex-wrap: wrap;
}

.feature-tag {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
  transition: all 0.3s ease;
  animation: featuresSlideIn 1s ease-out 0.6s both;
}

.feature-tag:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

/* 进入按钮 */
.enter-btn {
  background: linear-gradient(135deg, #1565C0, #0D47A1); /* 更深的蓝色调 */
  border: 2rpx solid rgba(255, 255, 255, 0.7); /* 增强按钮边缘清晰度 */
  border-radius: 50rpx;
  padding: 30rpx 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  position: relative;
  overflow: hidden;
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease, opacity 0.3s ease;
  animation: btn-glow 2s ease-in-out infinite, btnSlideIn 1.2s ease-out;
  box-shadow: 0 20rpx 50rpx rgba(21, 101, 192, 0.4); /* 调整阴影颜色以匹配更深的蓝色 */
} 
 
.btn-text {
  font-size: 36rpx;       /* 字体大小保持不变，可根据需要调整 */
  font-weight: 700;       /* 加粗字体 */
  color: #ffffff;         /* 白色字体 */
  text-shadow: 0 2rpx 4rpx rgba(21, 101, 192, 0.4); /* 调整文字阴影颜色 */
  animation: textScale 2s ease-in-out infinite; /* 添加字体大小缩放动画 */
}

/* 字体大小缩放动画 */
@keyframes textScale {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}
 
/* 按下按钮缩放 + 阴影增强 - 增强的点击效果 */
.enter-btn:active {
  transform: scale(0.92); /* 更明显的缩放效果 */
  box-shadow: 0 25rpx 70rpx rgba(21, 101, 192, 0.6); /* 调整阴影颜色 */
}

/* 条纹闪烁效果 - 调整位置使其顶部与按钮上边缘对齐 */
.enter-btn::before {
  content: '';
  position: absolute;
  top: 0; /* 顶部与按钮上边缘对齐 */
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transform: skewX(-30deg);
  opacity: 0.7;
  animation: shimmer 2s infinite;
  border-radius: 50rpx; /* 与按钮相同的圆角 */
}

/* 条纹闪烁动画 */
@keyframes shimmer {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}

/* 按下文字微动 */
.enter-btn:active .btn-text {
  transform: scale(0.95);
}

/* 整个按钮的闪烁动画 */
@keyframes btn-glow {
  0%, 100% {
    box-shadow: 0 20rpx 50rpx rgba(21, 101, 192, 0.4);
    opacity: 1;
  }
  50% {
    box-shadow: 0 25rpx 70rpx rgba(21, 101, 192, 0.7);
    opacity: 0.9;
  }
}

/* 标题和描述动画 */
.title-section {
  animation: fadeIn 0.8s ease-out;
}

.features-section {
  animation: featuresSlideIn 1s ease-out;
}

@keyframes logoSlideIn {
  from {
    opacity: 0;
    transform: translateY(-50rpx) scale(0.8);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes featuresSlideIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes btnSlideIn {
  from {
    opacity: 0;
    transform: translateY(50rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}





