.cover-page {
  width: 100%;
  height: 100vh;
  background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%);
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 背景装饰圆圈 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.floating-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(0, 255, 255, 0.1);
  box-shadow: 0 0 40rpx rgba(0, 255, 255, 0.2);
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: 10%;
  left: 10%;
  animation-delay: 0s;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: 20%;
  right: 15%;
  animation-delay: 2s;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  bottom: 30%;
  left: 20%;
  animation-delay: 4s;
}

.circle-4 {
  width: 120rpx;
  height: 120rpx;
  bottom: 20%;
  right: 25%;
  animation-delay: 1s;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg) scale(1); }
  50% { transform: translateY(-20px) rotate(180deg) scale(1.05); }
}

/* 主要内容 */
.main-content {
  text-align: center;
  z-index: 10;
  padding: 0 60rpx;
}

/* Logo 区域 */
.logo-section {
  position: relative;
  margin-bottom: 80rpx;
}

.logo-icon {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  position: relative;
}

.logo-inner {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #00ffff, #7b2ff7);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 255, 255, 0.4);
  animation: pulse 2s ease-in-out infinite;
}

.logo-text {
  font-size: 80rpx;
  font-weight: bold;
  color: #00ffff;
  text-shadow: 0 4rpx 12rpx rgba(0, 255, 255, 0.4);
}

.logo-glow {
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  right: -20rpx;
  bottom: -20rpx;
  background: linear-gradient(135deg, #00ffff, #7b2ff7);
  border-radius: 50%;
  opacity: 0.4;
  filter: blur(30rpx);
  animation: glow 2s ease-in-out infinite alternate;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

@keyframes glow {
  0% { opacity: 0.3; transform: scale(1); }
  100% { opacity: 0.6; transform: scale(1.1); }
}

/* 标题区域 */
.title-section {
  margin-bottom: 80rpx;
}

.main-title {
  font-size: 64rpx;
  font-weight: bold;
  color: #00ffff;
  margin-bottom: 20rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 255, 255, 0.4);
  letter-spacing: 4rpx;
}

.subtitle {
  font-size: 32rpx;
  color: rgba(0, 255, 255, 0.8);
  margin-bottom: 30rpx;
  font-weight: 300;
}

.description {
  font-size: 28rpx;
  color: rgba(0, 255, 255, 0.7);
  line-height: 1.6;
  font-weight: 300;
}

/* 特色标签 */
.features-section {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 100rpx;
  flex-wrap: wrap;
}

.feature-tag {
  background: rgba(0, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(0, 255, 255, 0.3);
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  color: #00ffff;
  font-weight: 500;
}

/* 进入按钮 */
.enter-btn {
  background: linear-gradient(135deg, #00ffff, #7b2ff7);
  border: none;
  border-radius: 50rpx;
  padding: 30rpx 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  position: relative;
  overflow: hidden;
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  animation: pulse-glow 2s ease-in-out infinite;
  box-shadow: 0 20rpx 50rpx rgba(0, 255, 255, 0.3);
}
 
.btn-text {
  font-size: 32rpx;       /* 字体大小保持不变，可根据需要调整 */
  font-weight: 700;       /* 加粗字体 */
  color: #ffffff;         /* 白色字体 */
  text-shadow: 0 2rpx 4rpx rgba(0, 255, 255, 0.4); /* 可保留光晕效果，让科技感更明显 */
  transition: transform 0.2s ease;
}

/* 按下按钮缩放 + 阴影增强 */
.enter-btn:active {
  transform: scale(0.95);
  box-shadow: 0 25rpx 60rpx rgba(0, 255, 255, 0.5);
  transform: scale(0.95);
}

/* 光圈动画，保持和按钮形状一致 */
.enter-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: inherit;       /* 继承按钮圆角 */
  background: rgba(0, 255, 255, 0.2);
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease, transform 0.3s ease;
}

.enter-btn:active::after {
  opacity: 1;
  transform: scale(1.1);       /* 点击时微微放大覆盖按钮边缘 */
}

/* 按下文字和箭头微动 */
.enter-btn:active .btn-text {
  transform: scale(0.95);
}
 
.enter-btn:active .btn-arrow {
  transform: translateX(15rpx) scale(1.2);
  transition: transform 0.2s ease;
}

/* 持续呼吸发光动画 */
@keyframes pulse-glow {
  0%, 100% {
    box-shadow: 0 20rpx 50rpx rgba(0, 255, 255, 0.3);
  }
  50% {
    box-shadow: 0 25rpx 60rpx rgba(0, 255, 255, 0.5);
  }
}


/* 底部装饰 */
.bottom-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
}

.wave-line {
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(0, 255, 255, 0.1) 25%, 
    rgba(0, 255, 255, 0.2) 50%, 
    rgba(0, 255, 255, 0.1) 75%, 
    transparent 100%
  );
  animation: wave 3s ease-in-out infinite;
}

@keyframes wave {
  0%, 100% { transform: translateX(-100%); }
  50% { transform: translateX(100%); }
}

