.page {
  padding-top: 0;
}

/* 顶部渐变栏 */
.header {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  color: white;
  border-bottom-left-radius: 0rpx;
  border-bottom-right-radius: 0rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.1);
}


.header-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

/* 结果卡片 */
.results-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.08);
}

.results-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #222;
}

.results-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}

.school-card {
  background: #f9fafc;
  padding: 20rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e5e7eb;
}

.school-name {
  font-weight: bold;
  font-size: 32rpx;
  color: #111;
}

.school-why {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #444;
  line-height: 1.6;
}

.strategy-card {
  background: #ffffff;
  padding: 24rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.08);
}

.strategy-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-top: 12rpx;
  color: #2c3e50;
}

.strategy-point {
  font-size: 26rpx;
  color: #555;
  margin-left: 12rpx;
}


/* 底部按钮 */
.footer {
  margin-top: 40rpx;
  text-align: center;
}

.back-btn {
  background: linear-gradient(90deg, #4f46e5, #3b82f6);
  color: #fff;
  font-size: 30rpx;
  border-radius: 12rpx;
  padding: 16rpx 0;
  width: 70%;
}

/* 推荐报告 */
.report-card {
  background: linear-gradient(135deg, #4facfe, #00f2fe);
  border-radius: 24rpx;
  padding: 40rpx 28rpx;
  margin: 20rpx;
  box-shadow: 0 12rpx 24rpx rgba(0,0,0,0.18);
  color: #fff;
}

.report-header {
  border-bottom: 1rpx solid rgba(255,255,255,0.5);
  padding-bottom: 14rpx;
  margin-bottom: 18rpx;
}

.report-title {
  font-size: 38rpx;
  font-weight: 700;
  font-family: "PingFang SC","Helvetica Neue","Helvetica","Arial",sans-serif;
  letter-spacing: 1.5rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.25);
}

.results-text {
  font-size: 30rpx;
  color: #fff;
  line-height: 1.8;
}
