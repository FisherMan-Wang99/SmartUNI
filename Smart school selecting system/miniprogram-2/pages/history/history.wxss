/* pages/history/history.wxss */
.history-container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f0f7ff;
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #1976D2 0%, #2196F3 100%);
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(33, 150, 243, 0.3);
  position: relative;
  overflow: hidden;
  animation: fadeIn 0.6s ease-out;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle at 50% 50%, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 60%);
}

.header::after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 70%);
  border-radius: 50%;
  transform: translate(30%, 30%);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 10rpx;
  position: relative;
  z-index: 1;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
  position: relative;
  z-index: 1;
}

/* 历史记录列表 */
.history-list {
  margin-bottom: 30rpx;
  animation: fadeIn 0.6s ease-out;
  animation-delay: 0.2s;
  opacity: 0;
  animation-fill-mode: forwards;
}

.history-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.history-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 28rpx rgba(0, 0, 0, 0.08);
}

.history-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(to bottom, #1976D2, #2196F3);
  border-radius: 8rpx 0 0 8rpx;
}

/* 记录头部 */
.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.date {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

.status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

.status.success {
  background: #e7f7ef;
  color: #00c853;
}

.status.processing {
  background: #e3f2fd;
  color: #2196f3;
}

.status.failed {
  background: #ffebee;
  color: #f44336;
}

/* 记录内容 */
.item-content {
  margin-bottom: 20rpx;
}

.major {
  font-size: 32rpx;
  color: #4a148c;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
  position: relative;
  z-index: 1;
}

.schools {
  font-size: 26rpx;
  color: #666;
  position: relative;
  z-index: 1;
}

/* 记录底部 */
.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  position: relative;
  z-index: 1;
}

.match-rate {
  font-size: 26rpx;
  color: #ff6b35;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

.actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  position: relative;
  z-index: 1;
}

.view-detail {
  color: #1a73e8;
  background: #e3f2fd;
}

.view-detail:active {
  opacity: 0.8;
  transform: scale(0.95);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  margin: 30rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  animation: fadeIn 0.6s ease-out;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.empty-desc {
  font-size: 26rpx;
  color: #ccc;
  display: block;
  margin-bottom: 50rpx;
}

.primary-btn {
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(106, 17, 203, 0.3);
  transition: all 0.3s ease;
}

.primary-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 60rpx;
  background: white;
  border-radius: 20rpx;
  margin: 30rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  animation: fadeIn 0.6s ease-out;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 动画效果 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}