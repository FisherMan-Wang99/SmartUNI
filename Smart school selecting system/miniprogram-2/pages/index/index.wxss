.page {
  padding-top: 0; /* 去掉默认留白 */
}


/* 顶部渐变栏 */
.header {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  color: white;
  border-bottom-left-radius: 0rpx;
  border-bottom-right-radius: 0rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.1);
}


.header-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.container {
  padding: 30rpx;
}

/* 卡片 */
.card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #2c3e50;
}

/* 输入框 / picker */
.input, .picker {
  width: 90%;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
  background: #fafafa;
}

.picker {
  color: #666;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  padding: 25rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(79,172,254,0.4);
  margin-top: 20rpx;
}

.submit-btn:active {
  opacity: 0.85;
}

/* 空数据提示 */
.empty {
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}

/* 骨架屏 */
.skeleton-card {
  margin-top: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.skeleton-title {
  width: 50%;
  height: 36rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e8e8e8 50%, #f0f0f0 75%);
  background-size: 400% 100%;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  animation: shimmer 1.5s infinite;
}

.skeleton-line {
  width: 100%;
  height: 28rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e8e8e8 50%, #f0f0f0 75%);
  background-size: 400% 100%;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  animation: shimmer 1.5s infinite;
}

.skeleton-line.short {
  width: 70%;
}

@keyframes shimmer {
  0% { background-position: -400% 0; }
  100% { background-position: 400% 0; }
}

.progress-bar {
  width: 100%;
  height: 20rpx;
  background: #f2f2f2;
  border-radius: 10rpx;
  margin-top: 20rpx;
  overflow: hidden;
}

.progress-fill {
  width: 30%;
  height: 100%;
  background: linear-gradient(90deg, #4facfe, #00f2fe);
  border-radius: 10rpx;
  animation: progressMove 1.2s infinite;
}

@keyframes progressMove {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(300%); }
}

