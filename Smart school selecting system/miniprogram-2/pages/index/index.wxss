}

/* 排序区域样式 */
.sorting-container {
  margin-top: 36rpx;
  padding-top: 28rpx;
  border-top: 2rpx dashed #e0e0e0;
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 28rpx;
}

.sorting-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 28rpx;
  font-style: italic;
}

.sorted-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  /* 防止拖动时页面内容溢出 */
  overflow: hidden;
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
}

.sorted-item {
  display: flex;
  align-items: center;
  padding: 28rpx 32rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  background: #fff;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  cursor: move;
  position: relative;
  user-select: none;
  touch-action: none;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.sorted-item:active {
  opacity: 0.9;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}

/* 拖动中的项目样式 */
.sorted-item.dragging {
  background: #e3f2fd;
  border-color: #2196f3;
  border-width: 3rpx;
  box-shadow: 0 10rpx 30rpx rgba(33, 150, 243, 0.3);
  transform: scale(1.03);
  z-index: 20;
  opacity: 0.95;
  animation: pulse 1.5s infinite;
}

/* 拖拽脉冲动画 */
@keyframes pulse {
  0%, 100% {
    box-shadow: 0 10rpx 30rpx rgba(33, 150, 243, 0.3);
  }
  50% {
    box-shadow: 0 12rpx 35rpx rgba(33, 150, 243, 0.5);
  }
}

.drag-handle {
  font-size: 44rpx;
  color: #999;
  margin-right: 24rpx;
  padding: 0 15rpx;
  font-weight: bold;
  touch-action: none;
  user-select: none;
  transition: all 0.3s ease;
  cursor: grab;
}

.drag-handle:active {
  color: #2196f3;
  transform: scale(1.2);
  cursor: grabbing;
}

.sorted-name {
  font-size: 30rpx;
  color: #333;
  flex: 1;
  line-height: 1.4;
}

/* 拖动占位符样式 */
.sorting-placeholder {
  height: 88rpx;
  background: #f0f7ff;
  border: 2rpx dashed #2196f3;
  border-radius: 16rpx;
  margin: 20rpx 0;
  transition: all 0.3s ease;
}

/* 问题序号样式 */
.question-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.question-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #1a73e8;
  margin-right: 16rpx;
  min-width: 40rpx;
  text-align: center;
}

.question-input {
  flex: 1;
}

.question-picker {
  flex: 1;
}

.input-group.full-width {
  width: 100%;
}

/* 滑动条标签样式 */
.slider-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
  padding: 0 10rpx;
}

.slider-labels text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 紧凑模式标签样式 */
.slider-labels.compact {
  padding: 0 20rpx;
}

.slider-labels.compact text {
  font-size: 22rpx;
  font-weight: 500;
