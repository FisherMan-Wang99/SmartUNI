.page {
  padding-top: 0; /* 去掉默认留白 */
  background-color: #f0f7ff;
}

/* 顶部渐变栏 - 扩展以覆盖黑色区域 */
.header {
  background: linear-gradient(135deg, #1976D2 0%, #2196F3 100%);
  padding: 120rpx 40rpx 60rpx; /* 增加顶部内边距 */
  color: white;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(33, 150, 243, 0.2);
  position: relative;
  overflow: hidden;
  margin-top: -40rpx; /* 向上移动覆盖黑色区域 */
  width: 100%;
  z-index: 1；
}

/* 顶部装饰元素 */
.header::after {
  content: '';
  position: absolute;
  bottom: -50rpx;
  right: -50rpx;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
}

.header::before {
  content: '';
  position: absolute;
  top: -50rpx;
  left: -50rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
}

/* 返回按钮 - 调整位置以适应扩展的顶部栏 */
.back-btn {
  position: absolute;
  top: 70rpx; /* 调整位置，考虑margin-top和padding变化 */
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  z-index: 10;
  transition: all 0.3s ease;
}

.back-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.back-icon {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
}

/* 标题内容容器 */
.header-content {
  text-align: center;
  margin-top: 20rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  color: white;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  color: white;
  letter-spacing: 2rpx;
}

/* 内容容器 */
.container {
  padding: 30rpx;
  padding-bottom: 100rpx;
}

/* 内容区域样式调整 */
.advantages-section, .process-section {
  color: #333;
}

/* 优势介绍区域 */
.advantages-section {
  margin-bottom: 80rpx;
}

.advantage-item {
  display: flex;
  align-items: flex-start;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.advantage-item:active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.advantage-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  background: #e3f2fd;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.advantage-content {
  flex: 1;
}

.advantage-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 12rpx;
}

.advantage-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 流程介绍区域 */
.process-section {
  margin-bottom: 80rpx;
}

.section-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #1976D2;
}

.process-icon {
  margin-right: 16rpx;
  font-size: 36rpx;
}

.process-steps {
  position: relative;
}

/* 连接线 */
.process-steps::before {
  content: '';
  position: absolute;
  left: 40rpx;
  top: 80rpx;
  bottom: 80rpx;
  width: 4rpx;
  background: #e0e0e0;
}

.process-step {
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.step-number {
  width: 80rpx;
  height: 80rpx;
  background: #1976D2;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  flex-shrink: 0;
  box-shadow: 0 8rpx 20rpx rgba(25, 118, 210, 0.2);
}

.step-content {
  flex: 1;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx;
  border: 2rpx solid #e0e0e0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.step-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 10rpx;
}

.step-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 开始按钮区域 */
.start-section {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
  position: relative;
}

/* 开始按钮 - 添加动画效果 */
.start-btn {
  background: linear-gradient(135deg, #1976D2 0%, #1565C0 100%);
  color: white;
  border: none;
  border-radius: 100rpx;
  padding: 28rpx 0;
  width: 600rpx;
  font-size: 34rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 30rpx rgba(25, 118, 210, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  animation: pulse 2.5s infinite ease-in-out;
}

/* 呼吸动画效果 */
@keyframes pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 10rpx 30rpx rgba(25, 118, 210, 0.3);
  }
  50% {
    transform: scale(1.03);
    box-shadow: 0 12rpx 35rpx rgba(25, 118, 210, 0.4);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 10rpx 30rpx rgba(25, 118, 210, 0.3);
  }
}

/* 点击波纹动画 */
@keyframes ripple {
  0% {
    transform: scale(0);
    opacity: 0.6;
  }
  100% {
    transform: scale(4);
    opacity: 0;
  }
}

/* 增强的点击效果 */
.start-btn:active {
  transform: scale(0.96);
  box-shadow: 0 6rpx 20rpx rgba(25, 118, 210, 0.2);
  background: linear-gradient(135deg, #1565C0 0%, #0D47A1 100%);
}

/* 按钮点击时添加波纹效果的伪元素 */
.start-btn::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  transform: translate(-50%, -50%);
  opacity: 0;
}

/* 按钮文本样式 */
.btn-text {
  font-size: 34rpx;
  font-weight: bold;
  position: relative;
  z-index: 1;
  transition: all 0.3s ease;
}

/* 按钮激活时文本变化 */
.start-btn:active .btn-text {
  transform: scale(1.05);
}

/* 波纹元素样式 */
.ripple {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.6);
  transform: translate(-50%, -50%);
  pointer-events: none;
  z-index: 0;
}

/* 波纹动画触发类 */
.animate-ripple .ripple {
  animation: ripple 0.6s ease-out;
}

/* 修复波纹动画的宽度高度设置 */
@keyframes ripple {
  0% {
    width: 0;
    height: 0;
    opacity: 0.6;
  }
  100% {
    width: 600rpx;
    height: 600rpx;
    opacity: 0;
  }
}

/* 动画效果 */
@keyframes float {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
  100% {
    transform: translateY(0);
  }
}

.floating-circle {
  animation: float 6s ease-in-out infinite;
}

.circle-2 {
  animation-delay: 2s;
}

.circle-3 {
  animation-delay: 4s;
}

/* 响应式调整 */
@media screen and (min-width: 768px) {
  .content-wrapper {
    max-width: 700rpx;
    margin: 0 auto;
  }
}