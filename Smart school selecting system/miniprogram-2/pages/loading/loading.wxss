/* pages/loading/loading.wxss */

/* 页面容器 */
.loading-container {
  background: linear-gradient(135deg, #1976D2, #4CAF50);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

/* 顶部标题 */
.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 20rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
  line-height: 1.5;
}

/* 主要内容区域 */
.content {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

/* 加载动画 */
.loading-animation {
  margin-bottom: 60rpx;
}

.loading-circle {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.spinner {
  width: 180rpx;
  height: 180rpx;
  border: 12rpx solid rgba(255, 255, 255, 0.2);
  border-top: 12rpx solid white;
  border-radius: 50%;
  animation: spin 1.5s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 进度指示器 */
.progress-section {
  width: 100%;
  margin-bottom: 40rpx;
}

.progress-bar {
  width: 100%;
  height: 20rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background-color: white;
  border-radius: 10rpx;
  transition: width 0.3s ease;
  box-shadow: 0 0 10rpx rgba(255, 255, 255, 0.6);
}

.progress-text {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 倒计时显示 */
.countdown-section {
  margin-bottom: 60rpx;
}

.countdown-text {
  font-size: 32rpx;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.countdown-number {
  font-weight: bold;
  font-size: 36rpx;
}

/* 加载步骤 */
.loading-steps {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 80rpx;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
}

.step-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
  transition: all 0.4s ease;
}

.step.active .step-icon {
  background-color: #4CAF50;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.4);
}

.step-text {
  font-size: 24rpx;
  color: white;
  text-align: center;
  width: 180rpx;
}

.step-line {
  flex: 1;
  height: 6rpx;
  background-color: rgba(255, 255, 255, 0.3);
  margin: 0 10rpx;
  transition: all 0.4s ease;
}

.step-line.active {
  background-color: #4CAF50;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.4);
}

/* 温馨提示 */
.tips-section {
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  width: 100%;
  backdrop-filter: blur(10rpx);
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.tips-content {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
}

/* 装饰性气泡元素 */
.decorative-elements {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.bubble {
  position: absolute;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.05);
  animation: float 8s infinite ease-in-out;
}

.bubble-1 {
  width: 200rpx;
  height: 200rpx;
  top: 10%;
  left: 5%;
  animation-delay: 0s;
}

.bubble-2 {
  width: 150rpx;
  height: 150rpx;
  bottom: 15%;
  right: 10%;
  animation-delay: 2s;
}

.bubble-3 {
  width: 100rpx;
  height: 100rpx;
  top: 40%;
  right: 15%;
  animation-delay: 4s;
}

.bubble-4 {
  width: 120rpx;
  height: 120rpx;
  bottom: 30%;
  left: 20%;
  animation-delay: 6s;
}

@keyframes float {
  0%, 100% {
    transform: translate(0, 0) scale(1);
    opacity: 0.5;
  }
  25% {
    transform: translate(30rpx, -30rpx) scale(1.1);
    opacity: 0.7;
  }
  50% {
    transform: translate(0, -50rpx) scale(1);
    opacity: 0.6;
  }
  75% {
    transform: translate(-30rpx, -20rpx) scale(0.9);
    opacity: 0.5;
  }
}

/* 响应式调整 */
@media screen and (min-width: 768px) {
  .content {
    max-width: 500rpx;
  }
}

/* 加载完成时的动画 */
@keyframes fadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}

.loading-container.completed {
  animation: fadeOut 0.5s ease;
}