<view class="cover-page">
  <!-- 背景装饰 -->
  <view class="bg-decoration">
    <view class="floating-circle circle-1"></view>
    <view class="floating-circle circle-2"></view>
    <view class="floating-circle circle-3"></view>
    <view class="floating-circle circle-4"></view>
  </view>

  <!-- 主要内容包装器 -->
  <view class="content-wrapper">
    <!-- 主要内容 -->
    <view class="main-content">
    <!-- Logo 区域 -->
    <view class="logo-section">
      <view class="logo-icon">
        <view class="logo-inner">
          <text class="logo-text">云</text>
        </view>
      </view>
      <view class="logo-glow"></view>
    </view>

    <!-- 标题区域 -->
    <view class="title-section">
      <view class="main-title">云道智能选校</view>
      <view class="subtitle">AI 驱动的个性化大学推荐系统</view>
      <view class="description">
        基于大数据分析与人工智能算法<br/>
        为您精准匹配最适合的海外院校
      </view>
    </view>

    <!-- 特色标签 -->
    <view class="features-section">
      <view class="feature-tag">🎯 精准匹配</view>
      <view class="feature-tag">📊 数据驱动</view>
      <view class="feature-tag">🤖 AI 智能</view>
    </view>

    <!-- 进入按钮 -->
    <view class="enter-section">
      <button class="enter-btn" bindtap="goToIndex">
        <view class="btn-text">开始智能选校</view>
      </button>
    </view>

    <!-- 底部装饰 -->
    <view class="bottom-decoration">
      <view class="wave-line"></view>
    </view>
  </view>
  </view>
</view>
