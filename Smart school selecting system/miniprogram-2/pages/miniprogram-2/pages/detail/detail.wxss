/* pages/recommendation/recommendation.wxss */  
.page {
  padding-top: 0; /* 去掉默认留白 */
  background-color: #f0f7ff;
}
 
/* 顶部渐变栏 */
.header {
  background: linear-gradient(135deg, #1976D2 0%, #2196F3 100%);
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  color: white;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(33, 150, 243, 0.2);
  position: relative;
  overflow: hidden;
}

.header::after {
  content: '';
  position: absolute;
  bottom: -50rpx;
  right: -50rpx;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
}

.header::before {
  content: '';
  position: absolute;
  top: -50rpx;
  left: -50rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
}
   
.title {
  display: block;
  font-size: 38rpx;
  font-weight: bold;
  color: rgb(255, 255, 255);
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 10rpx;
}
 
.subtitle {
  display: block;
  font-size: 26rpx;
  color: rgb(247, 247, 247);
  opacity: 0.9;
  letter-spacing: 2rpx;
}

.container {
  padding: 0;
  background-color: #f0f7ff;
  min-height: 100vh;
}

.header-actions {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
  background: white;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.history-btn {
  background: #e3f2fd;
  color: #1976D2;
  border: 1rpx solid #bbdefb;
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.history-btn:active {
  background: #bbdefb;
  transform: scale(0.98);
}

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  font-weight: 500;
}

/* 学生信息卡片 */
.student-card {
  background: white;
  border-radius: 24rpx;
  padding: 36rpx;
  margin: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.student-header {
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.student-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #4a148c;
}

.student-stats {
  display: flex;
  justify-content: space-around;
  position: relative;
  z-index: 1;
}

.stat-item {
  text-align: center;
  padding: 16rpx 24rpx;
  background: #f8f9ff;
  border-radius: 16rpx;
  border: 1rpx solid #e0e7ff;
  transition: all 0.3s ease;
}

.stat-item:active {
  transform: scale(0.98);
  background: #eef2ff;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #7c4dff;
}

/* 分类区域 */
.category-section {
  margin: 30rpx;
  margin-bottom: 40rpx;
  animation: fadeIn 0.6s ease-out;
}

.category-section.reach {
  animation-delay: 0.1s;
}

.category-section.match {
  animation-delay: 0.3s;
}

.category-section.safety {
  animation-delay: 0.5s;
}

.category-header {
  display: flex;
  align-items: center;
  background: white;
  padding: 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  margin-bottom: 20rpx;
}

.category-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 56rpx;
  height: 56rpx;
  border-radius: 12rpx;
  background: #f8f9ff;
}

.category-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.category-subtitle {
  font-size: 22rpx;
  color: #999;
  margin-left: 16rpx;
  white-space: nowrap;
  background: #f0f0f0;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 学校卡片 */
.schools-list {
  margin-top: -10rpx; /* 让卡片与标题更紧密 */
}

.school-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.school-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
}

.school-card:last-child {
  margin-bottom: 0;
}

.school-card:last-child {
  border-bottom: none;
}

.school-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
  z-index: 1;
}

.school-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.school-badge {
  background: linear-gradient(135deg, #4a148c, #7c4dff);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-weight: bold;
  white-space: nowrap;
}

.school-reasoning {
  margin-bottom: 20rpx;
  position: relative;
  z-index: 1;
}

.reasoning-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.school-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
}

.level-tag {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

.reach-tag {
  background: #fff1f0;
  color: #ff4d4f;
  border: 1rpx solid #ffccc7;
}

.match-tag {
  background: #fff7e6;
  color: #fa8c16;
  border: 1rpx solid #ffe7ba;
}

.safety-tag {
  background: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

/* 分析报告样式 */
.report-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  color: white;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
}

.report-content {
  margin-top: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  padding: 25rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.report-text {
  font-size: 28rpx;
  line-height: 1.7;
  color: white;
  white-space: pre-line;
}

.section-header {
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}
  
.section-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 26rpx;
  background: white;
  border-radius: 20rpx;
  margin: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.btn-primary, .btn-secondary {
  flex: 1;
  border-radius: 12rpx;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.btn-primary {
  background: #1890ff;
  color: white;
}

.btn-secondary {
  background: white;
  color: #1890ff;
  border: 1rpx solid #1890ff;
}

/* 分类特定样式 */
.category-section.reach .category-header {
  border-left: 8rpx solid #ff4d4f;
}

.category-section.match .category-header {
  border-left: 8rpx solid #faad14;
}

.category-section.safety .category-header {
  border-left: 8rpx solid #52c41a;
}


/* 动画效果 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}


