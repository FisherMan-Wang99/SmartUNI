/* pages/school-preference/school-preference.wxss */

/* 页面基础样式 */
.page {
  padding-top: 0; /* 去掉默认留白 */
  background-color: #f0f7ff;
  min-height: 100vh;
  padding-bottom: 100rpx;
}


/* 顶部渐变栏 */
.header {
  background: linear-gradient(135deg, #1976D2 0%, #2196F3 100%);
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  color: white;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(33, 150, 243, 0.2);
  position: relative;
  overflow: hidden;
}

/* 顶部装饰元素 */
.header::after {
  content: '';
  position: absolute;
  bottom: -50rpx;
  right: -50rpx;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
}

.header::before {
  content: '';
  position: absolute;
  top: -50rpx;
  left: -50rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  letter-spacing: 2rpx;
}

/* 容器样式 */
.container {
  padding: 30rpx;
  padding-bottom: 100rpx;
}

/* 进度指示器 */
.progress-indicator {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05);
  padding: 36rpx;
  margin-top: 30rpx;
  margin-bottom: 36rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #e0e0e0;
  border-radius: 6rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1976D2 0%, #2196F3 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-steps {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
}

.step {
  text-align: center;
  flex: 1;
}

.step.active {
  color: #1976D2;
  font-weight: bold;
}



.progress-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx 20rpx;
  position: relative;
  z-index: 1;
} 

.progress-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  position: relative;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.progress-dot.active {
  background-color: white;
  width: 28rpx;
  height: 28rpx;
  box-shadow: 0 0 0 10rpx rgba(255, 255, 255, 0.2);
  transform: scale(1.1);
}

.progress-line {
  flex: 1;
  height: 6rpx;
  background-color: rgba(255, 255, 255, 0.3);
  margin: 0 20rpx;
  position: relative;
  border-radius: 3rpx;
}

.progress-line::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background-color: white;
  width: 100%;
  transition: width 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 3rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.3);
}

.progress-line::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { left: -100%; }
  20%, 100% { left: 100%; }
}

.progress-labels {
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
  margin-top: 16rpx;
  position: relative;
  z-index: 1;
}

.progress-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  flex: 1;
  transition: all 0.3s ease;
}

.progress-label.active {
  font-weight: 600;
  color: white;
  transform: translateY(-2rpx);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* 进度百分比显示 */
.progress-percentage {
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 20rpx;
  color: white;
  position: relative;
  z-index: 1;
  opacity: 0.9;
}

/* 主内容区域 */
.content {
  padding: 30rpx;
  padding-bottom: 140rpx;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05);
  padding: 36rpx;
  margin-bottom: 36rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  margin-top: 30rpx;
  margin-bottom: 120rpx; /* 为底部按钮留出空间 */
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 6rpx;
  background: linear-gradient(90deg, #4a148c, #7c4dff);
  border-radius: 3rpx 3rpx 0 0;
}

.card-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #1976D2;
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title::before {
  content: '';
  display: inline-block;
  width: 10rpx;
  height: 30rpx;
  background: linear-gradient(to bottom, #1976D2, #2196F3);
  border-radius: 5rpx;
}

/* 问题项 */
.question-item {
  margin-bottom: 48rpx;
  position: relative;
  transition: transform 0.2s ease;
  display: flex;
  align-items: flex-start;
}

.question-item:last-child {
  margin-bottom: 0;
}

.question-item:active {
  transform: scale(0.995);
}

.question-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 24rpx;
  line-height: 1.6;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.question-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #1a73e8;
  margin-right: 16rpx;
  min-width: 40rpx;
  text-align: center;
  margin-left: 8rpx;
  flex-shrink: 0;
}

/* 滑块样式 */
.slider-container {
  margin: 20rpx 0;
}

.slider {
  width: 100%;
}

.slider-value {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-top: 12rpx;
}

.slider-wrapper {
  position: relative;
  padding: 20rpx 0;
}

.slider-markers {
  display: flex;
  justify-content: space-between;
  padding: 0 16rpx;
  margin-bottom: -8rpx;
}

.marker {
  width: 8rpx;
  height: 8rpx;
  background-color: #e0e0e0;
  border-radius: 50%;
  transition: background-color 0.3s ease;
}
/* 滑块样式 */
.slider-labels {
  display: flex;
  justify-content: space-between;
  padding: 0 8rpx;
  margin-top: 16rpx;
  margin-bottom: 24rpx;
}

.slider-labels text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  flex: 1;
  font-weight: 500;
  word-break: break-all;
  line-height: 1.4;
}

.slider-labels.compact text {
  font-size: 22rpx;
}

/* 增强滑块视觉效果 */
slider {
  --thumb-size: 28rpx;
  --track-height: 8rpx;
}

slider .wx-slider-thumb {
  width: var(--thumb-size);
  height: var(--thumb-size);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  background: linear-gradient(135deg, #1976D2, #2196F3);
}

slider:active .wx-slider-thumb {
  transform: scale(1.2);
  box-shadow: 0 6rpx 16rpx rgba(25, 118, 210, 0.4);
}

slider .wx-slider-track {
  background-color: #f0f0f0;
  border-radius: 4rpx;
}

slider .wx-slider-track-active {
  background: linear-gradient(90deg, #1976D2, #2196F3);
  border-radius: 4rpx;
}

/* 输入组样式 */
.input-group {
  margin-left: 16rpx; /* 与问题编号对齐 */
  flex: 1;
  margin-bottom: 20rpx;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.full-width {
  width: 100%;
}

/* 选择器样式 */
.question-picker {
  width: 100%;
  min-height: 92rpx;
  padding: 20rpx 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  background: #fafafa;
  transition: all 0.3s ease;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 26rpx;
  position: relative;
  overflow: hidden;
}

.question-picker::after {
  content: '>';
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
  transform: rotate(90deg);
  transition: transform 0.3s ease;
}

.question-picker:active {
  border-color: #1976D2;
  box-shadow: 0 0 0 8rpx rgba(25, 118, 210, 0.1);
}

.question-picker:active::after {
  transform: rotate(90deg) scale(1.2);
  color: #1976D2;
}

/* 排序题样式 */
.sorting-section {
  margin-bottom: 48rpx;
}

.sorting-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 24rpx;
  line-height: 1.6;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.sorting-container {
  margin-top: 20rpx;
}

.sorted-list {
  width: 100%;
}

.sorted-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.sorted-item.dragging {
  opacity: 0.9;
  transform: scale(1.03);
  z-index: 10;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
  border-color: #1976D2;
}

.sorted-name {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  line-height: 1.4;
  font-weight: 500;
}

/* 排序序号样式 */
.career-rank {
  font-size: 36rpx;
  font-weight: bold;
  color: #1976D2;
  width: 50rpx;
  text-align: center;
  min-width: 50rpx;
}

.career-name {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  line-height: 1.4;
  font-weight: 500;
}

.drag-handle {
  width: 60rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: grab;
  background-color: rgba(0, 0, 0, 0.02);
  margin-right: 20rpx;
  font-size: 36rpx;
  color: #666;
  font-weight: bold;
}

.drag-handle:active {
  cursor: grabbing;
  color: #1976D2;
}

.drag-icon {
  width: 36rpx;
  height: 24rpx;
  position: relative;
}

.drag-icon::before, .drag-icon::after {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  background-color: #666;
  border-radius: 50%;
}

.drag-icon::before {
  top: 0;
  left: 0;
}

.drag-icon::after {
  bottom: 0;
  left: 0;
}

.drag-icon span {
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  background-color: #666;
  border-radius: 50%;
  top: 0;
  right: 0;
}

.drag-icon span::after {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  background-color: #666;
  border-radius: 50%;
  bottom: 0;
  left: 0;
}

/* 底部按钮 */
.bottom-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  padding: 0 20rpx;
}
 
.back-btn {
  flex: 1;
  height: 96rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  background-color: white;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.back-btn:active {
  transform: scale(0.98);
  background-color: #e8e8e8;
  box-shadow: inset 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  flex: 2;
  height: 96rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: bold;
  transition: all 0.3s ease;
  background: linear-gradient(135deg, #4a148c 0%, #7c4dff 100%);
  color: white;
  box-shadow: 0 10rpx 30rpx rgba(124, 77, 255, 0.3);
  position: relative;
  overflow: hidden;
}

.submit-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  animation: shine 2s infinite;
}

@keyframes shine {
  0% { left: -100%; }
  20%, 100% { left: 100%; }
}

.submit-btn:active {
  opacity: 0.85;
  transform: translateY(4rpx);
  box-shadow: 0 6rpx 20rpx rgba(124, 77, 255, 0.2);
}

/* 选校结果选项样式 */
.result-options {
  padding: 60rpx 40rpx 240rpx; /* 底部留出空间避免被按钮遮挡 */
  margin-top: 20rpx;
}

.result-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
  padding: 20rpx 0;
}

.option-item {
  padding: 28rpx 40rpx;
  font-size: 32rpx;
  color: #1976D2;
  text-align: center;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  border: 2rpx solid #e3f2fd;
}

.option-item:active {
  background-color: #e3f2fd;
  transform: scale(0.98);
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.card {
  animation: fadeIn 0.6s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.fade-in {
  animation: fadeIn 0.5s ease-out;
}

/* 骨架屏样式 */
.loading-skeleton {
  background: linear-gradient(90deg, #f0f0f0 25%, #f8f8f8 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 12rpx;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 响应式调整 */
@media screen and (min-width: 768px) {
  .card {
    max-width: 700rpx;
    margin-left: auto;
    margin-right: auto;
    padding: 44rpx;
  }
  
  .career-sort-item {
    padding: 36rpx;
  }
  
  .question-number {
    width: 60rpx;
    height: 60rpx;
    font-size: 28rpx;
    line-height: 60rpx;
  }
  
  .career-rank {
    width: 64rpx;
    height: 64rpx;
    font-size: 32rpx;
  }
}