/* 页面基础样式 */
.page {
  background: linear-gradient(180deg, #f5f5f5 0%, #e0e0e0 100%);
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 顶部渐变栏 */
.header {
  background: linear-gradient(135deg, #1976D2 0%, #2196F3 100%);
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  color: white;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(33, 150, 243, 0.2);
  position: relative;
  overflow: hidden;
}

/* 顶部装饰元素 */
.header::after {
  content: '';
  position: absolute;
  bottom: -50rpx;
  right: -50rpx;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
}

.header::before {
  content: '';
  position: absolute;
  top: -50rpx;
  left: -50rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  letter-spacing: 2rpx;
}

/* 容器样式 */
.container {
  padding: 0 40rpx;
  margin-top: -20rpx;
}

/* 进度指示器 */
.progress-indicator {
  background: white;
  border-radius: 30rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #e0e0e0;
  border-radius: 6rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1976D2 0%, #2196F3 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-steps {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
}

.step {
  text-align: center;
  flex: 1;
}

.step.active {
  color: #1976D2;
  font-weight: bold;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 30rpx;
  padding: 40rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
  position: relative;
}

.card-title::after {
  content: '';
  position: absolute;
  bottom: -15rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #1976D2 0%, #2196F3 100%);
  border-radius: 3rpx;
}

/* 问题项 */
.question-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.question-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.question-number {
  width: 50rpx;
  height: 50rpx;
  background: linear-gradient(135deg, #1976D2 0%, #2196F3 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

/* 输入框样式 */
.input {
  flex: 1;
  height: 90rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
  background: #fafafa;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #1976D2;
  background: white;
  box-shadow: 0 0 0 10rpx rgba(25, 118, 210, 0.05);
}

.input.question-input {
  width: 100%;
}

/* 选择器样式 */
.picker {
  flex: 1;
  height: 90rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
  background: #fafafa;
  display: flex;
  align-items: center;
}

.picker.question-picker {
  width: 100%;
}

/* 底部按钮 */
.bottom-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.back-btn, .next-btn {
  width: 48%;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.back-btn {
  background: white;
  color: #1976D2;
  border: 2rpx solid #1976D2;
}

.back-btn:active {
  background: #f5f5f5;
  transform: scale(0.98);
}

.next-btn {
  background: linear-gradient(135deg, #4a148c 0%, #7c4dff 100%);
  color: white;
  border: none;
  box-shadow: 0 10rpx 30rpx rgba(124, 77, 255, 0.3);
  position: relative;
  overflow: hidden;
}

.next-btn::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255,255,255,0.2), transparent);
  transform: rotate(30deg);
  opacity: 0;
  transition: opacity 0.5s;
}

.next-btn:active {
  opacity: 0.85;
  transform: translateY(4rpx);
  box-shadow: 0 6rpx 20rpx rgba(124, 77, 255, 0.2);
}

.next-btn:active::before {
  opacity: 1;
}

/* 响应式调整 */
@media (max-width: 320px) {
  .container {
    padding: 0 30rpx;
  }
  
  .card {
    padding: 30rpx;
  }
  
  .header {
    padding: 100rpx 30rpx 50rpx;
  }
}